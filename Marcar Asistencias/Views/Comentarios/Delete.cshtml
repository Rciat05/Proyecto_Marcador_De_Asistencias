@model Marcar_Asistencias.Models.ComentariosModel

@{
    ViewData["Title"] = "Delete Comment";
}

<h1>Eliminar comentario</h1>

<h3>¿Estas seguro de querer borrar este comentario?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID del usuario:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioID)
        </dd>
        <dt class="col-sm-2">Tipo de comentario:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">Fecha de la creación del comentario:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaHora)
        </dd>
        <dt class="col-sm-2">Motivos del comentario:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="ComentarioNotaID" type="hidden" class="form-control" />
        <div class="col-4 offset-2 row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-100"><i class="fa-solid fa-trash"></i> Borrar</button>
            </div>
            <div class="col">
                <a class="btn btn-info w-100" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
            </div>
        </div>
    </form>
</div>