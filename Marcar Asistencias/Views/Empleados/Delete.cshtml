@model proyectometodologias.models.EmpleadosModel

@{
    ViewData["Title"] = "Borrar empleado";
}

<h1>Delete</h1>

<h3>¿Desea eliminar la información de este Empleado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">Apellido:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">Fecha de nacimiento:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class="col-sm-2">Departamento perteneciente:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departamento)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="EmpleadoID" type="hidden" class="form-control" />
        <div class="col-4 offset-2 row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-100"><i class="fa-solid fa-trash"></i> Borrar</button>
            </div>
            <div class="col">
                <a class="btn btn-info w-100" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
            </div>
        </div>
    </form>
</div>
