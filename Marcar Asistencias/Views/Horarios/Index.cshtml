@model IEnumerable<Marcar_Asistencias.Models.HorariosModel>

@{
    ViewData["Title"] = "Horarios";
}

<h1>Tabla de Horarios</h1>

<div class="container">
	<div class="row">
		<div class="col-md-12">

			<div class="mb-3 mb-3">
				<a asp-action="Create" asp-controller="Horarios" class="btn btn-success">
					Agregar Horario
				</a>
			</div>

			<table class="table table-bordered table-striped table-responsive" id="empleadostable">
				<thead>
					<tr>
						<th>Tipo de Horario</th>
						<th>Dias para laborar </th>
						<th>ACCIONES</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@Html.DisplayFor(modelItem => item.NombreHorario)</td>
							<td>@Html.DisplayFor(modelItem => item.DiasLaborables)</td>
							<td class="text-center">
								<div class="w-75 btn-group" role="group">
									<a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@item.HorarioID">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-90deg-left" viewBox="0 0 16 16">
											<path fill-rule="evenodd" d="M1.146 4.854a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H12.5A2.5 2.5 0 0 1 15 6.5v8a.5.5 0 0 1-1 0v-8A1.5 1.5 0 0 0 12.5 5H2.707l3.147 3.146a.5.5 0 1 1-.708.708z" />
										</svg>
									</a>

									<a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.HorarioID">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
											<path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
										</svg>
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

