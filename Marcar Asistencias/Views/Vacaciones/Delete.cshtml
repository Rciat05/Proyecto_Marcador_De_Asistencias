@model Marcar_Asistencias.Models.VacacionesModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Desea eliminar la información de este dia de vacacion?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID del empleado:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmpleadoID)
        </dd>
        <dt class="col-sm-2">Fecha de inicio:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">Fecha de Finalización:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class="col-sm-2">Razon de vacación:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input asp-for="IDVacaciones" type="hidden" class="form-control" />
        <div class="col-4 offset-2 row">
            <div class="col">
                <button type="submit" class="btn btn-danger w-100"><i class="fa-solid fa-trash"></i> Borrar</button>
            </div>
            <div class="col">
                <a class="btn btn-info w-100" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Volver</a>
            </div>
        </div>
    </form>
</div>
