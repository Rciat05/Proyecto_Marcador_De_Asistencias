@model IEnumerable<Marcar_Asistencias.Models.AusenciasModels>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
	<div class="row">
		<div class="col-md-12">

			<div class="mb-3 mb-3">
				<a asp-action="Create" asp-controller="Ausencias" class="btn btn-success">
					Agregar empleado
				</a>
			</div>

			<table class="table table-bordered table-striped table-responsive" id="empleadostable">
				<thead>
					<tr>
						<th>EmpleadoID</th>
						<th>Fecha</th>
						<th>Tipo de ausencia</th>
						<th>Fecha</th>
						<th>Justificacion</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@Html.DisplayFor(modelItem => item.EmpleadoID)</td>
							<td>@Html.DisplayFor(modelItem => item.Fecha)</td>
							<td>@Html.DisplayFor(modelItem => item.Fecha)</td>
							<td>@Html.DisplayFor(modelItem => item.Justificacion)</td>
							<td class="text-center">
								<div class="w-75 btn-group" role="group">
									<a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@item.IDAusencias"><i class="fa-solid fa-pen-to-square"></i></a>
									<a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.IDAusencias"><i class="fa-solid fa-trash"></i></a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
